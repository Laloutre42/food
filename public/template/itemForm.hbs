<!-- Modal -->
<div class="modal fade" id="newItemModal" tabindex="-1" role="dialog" aria-labelledby="newItemModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
                        class="sr-only">Close</span></button>
                <h4 class="modal-title" id="newItemModalLabel">Add a new item</h4>
            </div>
            <div class="modal-body">

                <form id ="newItemForm" class="form-horizontal" role="form">

                    <!--Name-->
                    <div class="form-group name">
                        <label for="inputName" class="col-sm-2 control-label">Name</label>

                        <div class="col-sm-10">
                            <input name="name" type="text" class="form-control typeahead" id="inputName" placeholder="Name"
                                   value="{{model.name}}">
                        </div>
                    </div>

                    <!--Energy/100g-->
                    <div class="form-group energy_100g">
                        <label for="inputEnergy_100g" class="col-sm-2 control-label">Kcal/100g</label>

                        <div class="col-sm-10">
                            <input name="energy_100g" type="number" class="form-control" id="inputEnergy_100g" placeholder="Kcal/100g"
                                   value="{{model.energy_100g}}" readonly>
                        </div>
                    </div>

                    <!--Weight-->
                    <div class="form-group weight">
                        <label for="inputWeight" class="col-sm-2 control-label">Weight</label>

                        <div class="col-sm-10">
                            <input name="weight" type="number" class="form-control" id="inputWeight" placeholder="Weight"
                                   value="{{model.weight}}">
                        </div>
                    </div>

                    <!--Category-->
                    <div class="form-group category">
                        <label for="inputCategory" class="col-sm-2 control-label">Category</label>

                        <div class="col-sm-10">
                            <select name="category" id="inputCategory" class="form-control">
                                <option value="1">BREAKFAST</option>
                                <option value="2">LUNCH</option>
                                <option value="3">DINER</option>
                                <option value="4">SNACK</option>
                            </select>
                        </div>
                    </div>


                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default cancel" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save">Save changes</button>
            </div>
        </div>
    </div>
</div>
